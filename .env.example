# =============================================================================
# THUMBOARD UI - Environment Variables Template
# =============================================================================
# Copy this file to .env.local for development
# For production, set these variables in your deployment platform (Vercel, etc.)

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
# MeiliSearch server URL - your search engine endpoint
MEILISEARCH_URL=https://api.meilisearch.com

# MeiliSearch API key - master key for full access
MEILISEARCH_API_KEY=your_meilisearch_master_key_here

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
# Application URL - used for absolute URLs and redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# EMAIL/SMTP CONFIGURATION (for contact form)
# =============================================================================
# Gmail SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=thumboard@gmail.com
SMTP_PASS=your_gmail_app_password_here

# Email addresses
EMAIL_FROM=thumboard@gmail.com
EMAIL_TO=connect@thumboard.in

# =============================================================================
# CLOUDFLARE TURNSTILE (CAPTCHA)
# =============================================================================
# Cloudflare Turnstile site key (public)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAABlqWd4TLACHhY2U

# Cloudflare Turnstile secret key (private)
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here



# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Vercel Analytics (automatically enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id

# Google Analytics (if using)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# JWT secret for authentication (if implementing auth)
# JWT_SECRET=your_super_secret_jwt_key_here

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode (true/false)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false